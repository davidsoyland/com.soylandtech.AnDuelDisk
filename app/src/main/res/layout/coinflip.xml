<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CoinFlip" >




    <ImageView
        android:id="@+id/imgCoinFlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/coin"
        android:src="@drawable/coinflipheads2headsanim" />

    <TextView
        android:id="@+id/txtCoinState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgCoinFlip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/heads"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/txtCoinMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCoinFlip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/tap_coin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

</RelativeLayout>